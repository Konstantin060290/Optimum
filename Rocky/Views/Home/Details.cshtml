@model Rocky.Models.ViewModels.DetailsVM

<div class="">
    <form method="post">
        <input asp-for="@Model.Product.Id" hidden />
        <div class="container backgroundWhite pt-4">
            <div class="card" style="border:1px solid #000000; ">
                <div class="card-header bg-dark text-light ml-0 row container" style="border-radius: 0px;">
                    <div class="col-12 col-md-6">
                        <h1 class="text-white">@Model.Product.Name</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@WC.ImagePath@Model.Product.Image" style="width:100%" class="rounded" />
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">
                                    <div class="col-12">
                                        <span class="badge p-3 border" style="background-color:lavenderblush">@Model.Product.Category.Name</span>
                                        <span class="badge p-3 border" style="background-color:azure">@Model.Product.ApplicationType.Name</span>
                                        <h3 class="text-success"></h3>
                                        <p class="text-secondary">@Html.Raw(Model.Product.Description)</p>
                                    </div>
                                    <div class="container rounded p-2">
                                        <div class="row">
                                            <label asp-for="@Model.Product.DesignNumber"></label>
                                            <span> : @Model.Product.DesignNumber</span>
                                        </div>
                                        <div class="row">
                                            <label asp-for="@Model.Product.Name"></label>
                                            <span> : @Model.Product.Name</span>
                                        </div>
                                        <div class="row">
                                            <label asp-for="@Model.Product.Status"></label>
                                            <span> : @Model.Product.Status</span>
                                        </div>
                                    </div>
                                    @if (Model.Product.Name.Contains("ПГА"))
                                        {
                                <div class="container rounded p-2">
                                    <div class="row">
                                        <label asp-for="@Model.Product.TypePGA"></label>
                                        <span> : @Model.Product.TypePGA</span>
                                    </div>
                                    <div class="row">
                                        <label asp-for="@Model.Product.Volume"></label>
                                        <span> : @Model.Product.Volume</span>
                                    </div>
                                    <div class="row">
                                        <label asp-for="@Model.Product.P2PGA"></label>
                                        <span> : @Model.Product.P2PGA</span>
                                    </div>
                                    <div class="row">
                                        <label asp-for="@Model.Product.FluidPartMaterial.Name"></label>
                                        <span> : @Model.Product.FluidPartMaterial.Name</span>
                                    </div>
                                    <div class="row">
                                        <label asp-for="@Model.Product.ExplosionProofPGA"></label>
                                        <span> : @Model.Product.ExplosionProofPGA</span>
                                    </div>
                                </div>
                                        }
                                    @if (Model.Product.Name.Contains("НД"))
                                        {
                                        <div class="container rounded p-2">
                                            <div class="row">
                                                <label asp-for="@Model.Product.TypePump"></label>
                                                <span> : @Model.Product.TypePump</span>
                                            </div>
                                            <div class="row">
                                                <label asp-for="@Model.Product.Qapacity"></label>
                                                <span> : @Model.Product.Qapacity</span>
                                            </div>
                                            <div class="row">
                                                <label asp-for="@Model.Product.P2max"></label>
                                                <span> : @Model.Product.P2max</span>
                                            </div>
                                            <div class="row">
                                                <label asp-for="@Model.Product.P1"></label>
                                                <span> : @Model.Product.P1</span>
                                            </div>
                                            <div class="row">
                                                <label asp-for="@Model.Product.NPIPR"></label>
                                                <span> : @Model.Product.NPIPR</span>
                                            </div>
                                            <div class="row">
                                                <label asp-for="@Model.Product.Power"></label>
                                                <span> : @Model.Product.Power</span>
                                            </div>
                                            <div class="row">
                                                <label asp-for="@Model.Product.Strokes"></label>
                                                <span> : @Model.Product.Strokes</span>
                                            </div>
                                            <div class="row">
                                                <label asp-for="@Model.Product.Stroke_length"></label>
                                                <span> : @Model.Product.Stroke_length</span>
                                            </div>
                                            <div class="row">
                                                <label asp-for="@Model.Product.FluidPartMaterial.Name"></label>
                                                <span> : @Model.Product.FluidPartMaterial.Name</span>
                                            </div>
                                            <div class="row">
                                                <label asp-for="@Model.Product.ExplosionProofPump"></label>
                                                <span> : @Model.Product.ExplosionProofPump</span>
                                            </div>
                                        </div>
                                        }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Вернуться</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            @if (Model.ExistInCart)
                                {
                                <button asp-action="RemoveFromCart" asp-route-id="@Model.Product.Id" class="btn btn-warning btn-square form-control btn-lg" style="height:50px;">Удалить из выбора</button>
                                }
                            else
                                {<button type="submit" asp-route="@Model.Product.Id" class="btn btn-info form-control btn-lg" style="height:50px;">Добавить к выбору</button>

                                }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>