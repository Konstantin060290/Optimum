@model Rocky.Models.Fluid

<form method="post">
    <input asp-for="Id" hidden />
    <div class=" border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Редактировать перекачиваемую жидкость</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Temperature"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Temperature" class="form-control" />
                        <span asp-validation-for="Temperature" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Density"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Density" class="form-control" />
                        <span asp-validation-for="Density" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Kinematic_Viscosity"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Kinematic_Viscosity" class="form-control" />
                        <span asp-validation-for="Kinematic_Viscosity" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Vapor_Pressure"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Vapor_Pressure" class="form-control" />
                        <span asp-validation-for="Vapor_Pressure" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PH"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PH" class="form-control" />
                        <span asp-validation-for="PH" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Редактировать" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-50"><i class="fas fa-arrow-left"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>
@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}


