@model IEnumerable<Rocky.Models.FluidPartMaterial>


<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">
                Материалы проточной части
            </h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Создать новый материал проточной части</a>            
        </div>
    </div>
    <br />
    <br />

    @if(Model.Count()>0)
        {
        FluidPartMaterial fpm1 = new FluidPartMaterial();
        <table class="table table-bordered table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th><label asp-for="@fpm1.Id"></label></th>
                    <th><label asp-for="@fpm1.Name"></label></th>
                    <th><label asp-for="@fpm1.CodeName"></label></th>
                    <th></th>
                </tr>
            </thead>
                <tbody>
                    @foreach(var obj in Model)
                    {
                    <tr>
                        <td width="10%">@obj.Id</td>
                        <td width="70%">@obj.Name</td>
                        <td width="20%">@obj.CodeName</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2"><i class="fas fa-edit"></i></a>
                                <a asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2"><i class="fas fa-trash-alt"></i></a>
                            </div>
                        </td>

                    </tr>
                    }

                </tbody>
        </table>
    }
    else
    {
    <p>Не создано ни одного материала.</p>
    }

</div>
