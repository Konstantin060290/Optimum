@model Rocky.Models.Product

<div class="col-lg-4 col-md-6 pb-4 filter @Model.Category.Name.Replace(' ', '_')">
    <!-- Card-->
    <div class="card bg-white rounded shadow-sm" style="border: 1px solid #222; width: 100%; height: 100%">
        <div style="width:150%">
            <div class="col-7"><label class="float-none">@Model.Name</label></div>
            <div class="col-7"><label class="float-none">@Model.DesignNumber</label></div>
        </div>
        @{ 
        if (@Model.Status == "Литера А")
            {<div class="shadow-sm p-3 mb-5 bg-light rounded" style="color: SpringGreen">
            <div class="col-7"><label class="float-none">@Model.Status</label></div>
            </div>
            }
        else if (@Model.Status == "Литера И")
            {<div class="shadow-sm p-3 mb-5 bg-light rounded" style="color: Gold ">
                <div class="col-7"><label class="float-none">@Model.Status</label></div>
            </div>
            }
        else if (@Model.Status == "Отменено. Только для ЗИП")
            {<div class="shadow-sm p-3 mb-5 bg-light rounded" style="color: Crimson ">
                <div class="col-7"><label class="float-none">@Model.Status</label></div>
            </div>
            }
        else
            {<div class="shadow-sm p-3 mb-5 bg-light rounded">
            <div class="col-7"><label class="float-none">@Model.Status</label></div>
            </div>
            }
        }
        <div style="width: 60%; height: 60%; ">
            <img style="float:none; display:block; width: 100%; position:center" src="@WC.ImagePath@Model.Image" alt="Card image cap">
        </div>
        <div class="card-body p-1 px-3 row">
            <div class="col-6">
                <span class="badge p-2 border w-200" style="background-color:lavenderblush">@Model.Category.Name</span>
            </div>
            <div class="col-7 border-0">
                <span class="badge p-2 border w-200" style="background-color:aliceblue">@Model.ApplicationType.Name</span>
            </div>
            <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
                <p> @Model.ShortDesc</p>
            </div>
            <div class="col-12 p-1">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">Об изделии</a>
            </div>
        </div>
    </div>
</div>
