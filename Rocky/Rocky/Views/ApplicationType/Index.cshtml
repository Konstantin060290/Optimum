@model IEnumerable<Rocky.Models.ApplicationType>


<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">
                Области применения
            </h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Добавить область применения</a>
        </div>
    </div>
    <br />
    <br />

    @if (Model.Count() > 0)
        {<table class="table table-bordered table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Область применения</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                    {
                    <tr>
                        <td width="10%">@obj.Id</td>
                        <td width="70%">@obj.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="ApplicationType" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2"><i class="fas fa-edit"></i></a>
                                <a asp-controller="ApplicationType" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2"><i class="fas fa-trash-alt"></i></a>
                            </div>
                        </td>
                    </tr>
                    }

            </tbody>
        </table>
        }
    else
        {
        <p>Нет добавленных областей применения</p>
        }

</div>

