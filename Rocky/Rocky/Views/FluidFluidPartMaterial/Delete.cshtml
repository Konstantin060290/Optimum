@model Rocky.Models.ViewModels.FfpmVM

<form method="post" asp-action="DeletePost">
    <input asp-for="FluidFluidPartMaterial.Id" hidden/>
    <div class=" border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Удалить применимость материала в жидкости</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="FluidFluidPartMaterial.FluidId"></label>
                    </div>
                    <div class="col-8">
                        <select id="selectSquad" asp-for="FluidFluidPartMaterial.FluidId" asp-items="@Model.FluidSelectList" class="form-control" disabled>
                            <option selected>--Выберите перекачиваемую жидкость--</option>
                        </select>
                        <span asp-validation-for="FluidFluidPartMaterial.FluidId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="FluidFluidPartMaterial.FluidPartMaterialId"></label>
                    </div>
                    <div class="col-8">
                        <select id="selectSquad" asp-for="FluidFluidPartMaterial.FluidPartMaterialId" asp-items="@Model.FluidPartMaterialSelectList" class="form-control" disabled>
                            <option selected>--Выберите материал проточной части--</option>
                        </select>
                        <span asp-validation-for="FluidFluidPartMaterial.FluidId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="FluidFluidPartMaterial.CorrVelForFluid"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="FluidFluidPartMaterial.CorrVelForFluid" class="form-control" disabled/>
                        <span asp-validation-for="FluidFluidPartMaterial.CorrVelForFluid" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="FluidFluidPartMaterial.Applicability"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="FluidFluidPartMaterial.Applicability" class="form-control" disabled />
                        <span asp-validation-for="FluidFluidPartMaterial.Applicability" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Удалить" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-arrow-left"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>
@section Scripts{

    @{<partial name ="_ValidationScriptsPartial"/>}

} 


